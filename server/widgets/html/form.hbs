<form name="widget-form-{{type}}">
  <div class="form-group">
    <label for="widget-form-{{type}}-title">Title</label>
    <input name="title" value="{{title}}" type="text" class="form-control" id="widget-form-{{type}}-title" placeholder="Widget title">
  </div>
  <div class="form-group">
    <label for="widget-form-{{type}}-html">HTML</label>
    <textarea rows="10" name="html" class="form-control" id="widget-form-{{type}}-html" we-editor-height="300">{{configuration.html}}</textarea>

    <script>$(document).ready(function() {
    we.components.editor.init('#widget-form-{{type}}-html');
    });</script>

  </div>

  {{{controllFields}}}

  {{#if id}}
    <input type="hidden" name="id" value="{{id}}">
    <button type="submit" class="btn btn-primary">Save</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">Cancel</button>
  {{else}}
    <button type="submit" class="btn btn-primary">Add</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">Cancel</button>
  {{/if}}
</form>